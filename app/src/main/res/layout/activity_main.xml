<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#081538"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Disaster Management System"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/txtTitle"></TextView>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Safety isn’t expensive, it’s priceless."
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:id="@+id/txtSlogan"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/btnSignIn"
            android:shadowColor="#070707"
            android:shadowRadius="5"
            android:text="Sign Up"
            android:textColor="@android:color/white"></Button>
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/btnSignIn"
            android:shadowColor="#070707"
            android:shadowRadius="5"
            android:text="Sign In"
            android:textColor="@android:color/white"></Button>

    </LinearLayout>



</RelativeLayout>